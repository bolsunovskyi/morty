#JSGF V1.0;

grammar morty;

<greeting> = (морти|окей морти);
<action> = (подскажи|включи|выключи|понизь яркость|повысь яркость|увеличь яркость|уменьшь яркость|скажи);
<target> = (погоду|температуру|температура|свет|лампа|лампу|подсветку|кровать|погода);
<location> = (полтаве|зеркало|зеркале|кухне|спальне|зале|киеве);
<expression> = <action> <target> [<location>];
public <query> = <greeting> | <expression>;

